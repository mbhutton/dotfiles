# shellcheck shell=bash

# Set up this shell session with mh-chezmoi-prompt
# to assist detection of when shell needs reloading
# following a 'chezmoi apply'.
#
# Dependency: must be after adding shared_bin to PATH (NN_path_shared_bin)

if [[ -z $(/usr/bin/env zsh -c 'echo -n') ]]; then
  eval "$(mh-chezmoi-prompt shell_init)"
else
  echo "mh-chezmoi-prompt not loaded, as non-interative shell prints unexpected output" >&2
fi
