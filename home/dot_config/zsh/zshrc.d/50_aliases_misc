alias byebye='sudo shutdown -h now'
alias f=fd

# Grep aliases...
# Note: prezto's existing grep alias includes nocorrect and color=auto
alias g="${aliases[grep]:-grep} -i"  # (g)rep, case insensitive by default
alias gs="${aliases[grep]:-grep}"  # (s)ensitive
alias ge="${aliases[grep]:-grep} -i -E"  # (e)xtended, for regex
alias gse="${aliases[grep]:-grep} -E"  # (s)ensitive (e)xtended

alias lvcsj='list-vms-containers-sessions-jobs'

alias npx='npx --no-install'  # Guard against accidental global installs
alias rz='exec zsh -i'  # (R)eload (Z)sh
alias v="bat"
alias yy=yazi

